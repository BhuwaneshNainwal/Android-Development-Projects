<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/list"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/india"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="42dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:text="INDIA" />

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/india" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastupdate"
        android:textSize="14sp"
        android:background="@android:color/holo_blue_light"
        android:layout_gravity="end"
        android:textColor="@color/black"
        android:hint="Lastly updated at 00:00 IST"
        android:layout_marginTop="12dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/totalcount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textColor="#000000"
                android:hint="000000000"
                android:textSize="15sp"
                android:layout_marginTop="32dp"
                tools:text="0" />
            <TextView
                android:id="@+id/totalcases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="TOTAL"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/totalactivecount"
                android:layout_width="wrap_content"
                android:hint="000000000"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginTop="32dp"
                tools:text="0" />
            <TextView
                android:id="@+id/totalactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="ACTIVE"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/totaldeathscount"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:hint="000000000"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginTop="32dp"
                tools:text="0" />
            <TextView
                android:id="@+id/totaldeaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="DECEASED"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:id="@+id/state_list"
        android:textStyle="bold"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state"
            android:textSize="32sp"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="STATE WISE DATA"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>