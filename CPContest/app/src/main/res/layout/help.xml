<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list"
        android:background="@color/white"
        android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDE7F6"
        android:padding="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:padding="27.5dp"
            android:background="@drawable/back"
            android:layout_marginLeft="10dp"
            android:text="The red color indicates that the contest is already running."
            android:textStyle="bold"
            android:fontFamily="@font/dancingscript"
            android:textColor="@color/black"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EDE7F6"
            android:padding="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="27.5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back"
                android:text="The green color indicates that the contest will start within the next 24 hours."
                android:textStyle="bold"
                android:fontFamily="@font/dancingscript"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white"
            android:padding="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/orange"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_marginLeft="10dp"
                android:padding="27.5dp"
                android:text="The orange color indicates that the contest will start after the next 24 hours."
                android:textStyle="bold"
                android:fontFamily="@font/dancingscript"
                android:textColor="@color/black"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white"
            android:padding="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bell"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:layout_marginLeft="10dp"
                android:padding="27.5dp"
                android:text="Press the bell icon to get notified 10 minutes before a contest."
                android:textStyle="bold"
                android:fontFamily="@font/dancingscript"
                android:textColor="@color/black"
                />

        </LinearLayout>



    </LinearLayout>


</ScrollView>
